{
    "name": "lms-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "api:dev": "npm run start:dev -w apps/api",
        "web:dev": "npm run dev -w apps/web",
        "build": "npm run build --workspaces",
        "docker:up": "docker-compose up --build",
        "docker:down": "docker-compose down"
    }
}